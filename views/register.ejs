<html>
  <%- include("components/head"); %>

  <body id="login-form">
    <div class="form-signin d-flex h-100">
      <div class="bg-dark m-auto px-5 py-5 rounded-3">
        <h1 class="text-white">Register to play</h1>
        <form class="my-5" method="post" action="/register/auth">
          <div class="form-floating">
            <input
              type="text"
              class="form-control <% if (userExist) { %> is-invalid <% } %>"
              id="username"
              name="username"
              placeholder="yourusername"
              pattern="[a-z0-9-_\.]+"
              minlength="4"
              aria-describedby="nameHelp"
              required
            />
            <label for="username">Username</label>
            <div id="validationServerUsernameFeedback" class="invalid-feedback">
              Username exist, try another one.
            </div>
          </div>
          <div id="nameHelp" class="form-text mb-2">
            Use a unique usernames.
          </div>

          <div class="form-floating">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              aria-describedby="passwordHelp"
              placeholder="*******"
              minlength="4"
              required
            />
            <label for="password">Password</label>
          </div>
          <div id="passwordHelp" class="form-text mb-2">
            Use a proper password and easy to remember.
          </div>

          <div class="py-2 d-flex justify-content-between">
            <button class="btn btn-lg btn-primary" type="submit">
              Register
            </button>
            <a class="btn btn-lg btn-secondary" href="/login">Login</a>
          </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
